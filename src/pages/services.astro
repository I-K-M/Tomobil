---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Our Services | Tomobil Car Hire">
  <main class="min-h-screen">
    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-20">
      <div class="container mx-auto px-4">
        <h1 class="text-5xl font-bold mb-6">Our Services</h1>
        <p class="text-xl max-w-2xl">Experience premium car rental services tailored to your needs.</p>
      </div>
    </section>

    <!-- Company Explanation -->
    <section class="py-16">
      <div class="container mx-auto px-4">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-3xl font-bold mb-6">Premium Car Rental Services</h2>
            <p class="text-gray-600 mb-4">
              At Tomobil, we offer a comprehensive range of car rental services designed to meet your every need:
            </p>
            <ul class="space-y-4">
              <li class="flex items-start">
                <span class="text-blue-600 mr-2">✓</span>
                <div>
                  <h3 class="font-semibold">Short-term Rentals</h3>
                  <p class="text-gray-600">Perfect for weekend getaways or business trips</p>
                </div>
              </li>
              <li class="flex items-start">
                <span class="text-blue-600 mr-2">✓</span>
                <div>
                  <h3 class="font-semibold">Long-term Leasing</h3>
                  <p class="text-gray-600">Flexible monthly rental options for extended periods</p>
                </div>
              </li>
              <li class="flex items-start">
                <span class="text-blue-600 mr-2">✓</span>
                <div>
                  <h3 class="font-semibold">Corporate Solutions</h3>
                  <p class="text-gray-600">Tailored fleet management for businesses</p>
                </div>
              </li>
            </ul>
          </div>
          <div class="bg-gray-100 p-8 rounded-lg">
            <h3 class="text-2xl font-bold mb-4">Why Choose Our Services?</h3>
            <ul class="space-y-4">
              <li class="flex items-center">
                <span class="text-blue-600 mr-2">•</span>
                <span>24/7 customer support</span>
              </li>
              <li class="flex items-center">
                <span class="text-blue-600 mr-2">•</span>
                <span>Flexible pickup and drop-off locations</span>
              </li>
              <li class="flex items-center">
                <span class="text-blue-600 mr-2">•</span>
                <span>Comprehensive insurance coverage</span>
              </li>
              <li class="flex items-center">
                <span class="text-blue-600 mr-2">•</span>
                <span>Regular maintenance and cleaning</span>
              </li>
              <li class="flex items-center">
                <span class="text-blue-600 mr-2">•</span>
                <span>Competitive pricing</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
